pipeline {
    agent any
    tools { 
        maven 'Maven 3.8.1' 
        jdk 'jdk11' 
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                    mvn clean package
                ''' 
            }
        }
        
        stage ('Test') {
            steps {
              sh '''
                echo 'mvn verify'
                mvn verify
               '''
            }
        }

        stage ('Build') {
            steps {
              sh '''
                echo 'mvn build stage'
                mvn clean install
               '''
            }
        }
    }
}
