pipeline {
    agent {
        docker {
            image 'maven:3.8.1-adoptopenjdk-11' 
            args '-v /Users/santosh.nagaraja/.m2:/root/.m2' 
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'mvn verify'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'mvn compile jib:build'
            }
        }
    }
}
